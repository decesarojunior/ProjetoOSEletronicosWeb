<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="ProjetoOSEletronicosWebPU" transaction-type="JTA">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>    
    <jta-data-source>jdbc/oseletronicos</jta-data-source>
    <class>br.edu.ifsul.modelo.Estado</class>
    <class>br.edu.ifsul.modelo.Cidade</class>
    <class>br.edu.ifsul.modelo.Usuario</class>
    <class>br.edu.ifsul.modelo.Permissao</class>
    <class>br.edu.ifsul.modelo.PessoaFisica</class>
    <class>br.edu.ifsul.modelo.OrdemServico</class>
    <class>br.edu.ifsul.modelo.Equipamento</class>
    <class>br.edu.ifsul.modelo.ItemProduto</class>
    <class>br.edu.ifsul.modelo.ItemServico</class>
    <class>br.edu.ifsul.modelo.ContaReceber</class>
    <class>br.edu.ifsul.modelo.Produto</class>
    <class>br.edu.ifsul.modelo.Marca</class>
    <class>br.edu.ifsul.modelo.Servico</class>
    <class>br.edu.ifsul.modelo.Foto</class>
    <class>br.edu.ifsul.modelo.Arquivo</class>  
    <properties>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
      <property name="hibernate.transaction.jta.platform" value="org.hibernate.service.jta.platform.internal.SunOneJtaPlatform"/>
    </properties>
     	
  </persistence-unit>
</persistence>
